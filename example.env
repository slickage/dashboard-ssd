# Copy this file to .env and fill in real credentials for local development.
# Never commit your populated .env file.

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
LINEAR_TOKEN="linear-api-token"
ENCRYPTION_KEY="base64-encoded-encryption-key"
SLACK_API_KEY="slack-app-token"
SLACK_CHANNEL="your-slack-channel"

# Provide either NOTION_TOKEN or NOTION_API_KEY (legacy naming).
NOTION_TOKEN="notion-integration-token"
# NOTION_API_KEY="notion-api-key"

# Comma or newline separated list of curated Notion database IDs.
# In dev/test you can omit this to fall back to priv/notion/collections.json.
NOTION_CURATED_DATABASE_IDS="db-id-1,db-id-2"
# Optional knowledge base filters. Defaults shown below.
NOTION_ALLOWED_PAGE_TYPES="Wiki"
NOTION_PAGE_TYPE_PROPERTIES="Type"
# Allow documents without a matching type property (set to false to require it)
# NOTION_ALLOW_UNTYPED_DOCUMENTS="true"
# Discovery mode: set to "pages" to index top-level wiki pages instead of databases.
# NOTION_KB_DISCOVERY_MODE="pages"
# Optional overrides when discovery mode is pages.
# NOTION_PAGE_COLLECTION_ID="kb:auto:pages"
# NOTION_PAGE_COLLECTION_NAME="Wiki Pages"
# NOTION_PAGE_COLLECTION_DESCRIPTION="Top-level wiki pages"

ANTHROPIC_API_KEY="anthropic-api-key"
FIREFLIES_API_TOKEN="fireflies-api-token"

# Optional: Direct Google OAuth access token for local scripts.
# Note: Calendar listing in the app uses the signed-in user's token only
# (no env fallback). This token can still be used for Drive helpers.
# GOOGLE_OAUTH_TOKEN="google-oauth-access-token"
